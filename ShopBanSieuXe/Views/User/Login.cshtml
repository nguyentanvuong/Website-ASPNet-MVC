
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        .khung {
            max-width: 500px;
            margin-left: auto;
            margin-right:auto;
            margin-bottom: 30px;
            border-radius: 5px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }
    </style>
    <div>
        @using(Html.BeginForm())
        {
            <div class="khung mt-md-5 p-2">
                <h3 class="text-center text-success">ĐĂNG NHẬP</h3>
                <div class="row">
                    <div class="col-md-3">
                        <img src="~/Content/img/logo.png" alt="Cinque Terre" width="119" height="50" />
                    </div>
                    <div class="col-md-8">
                        <div class="form-group">
                            <label>Tên đăng nhập</label>
                            <input class="form-control" name="username" required type="text" placeholder="Tên đăng nhập hoặc email" />
                        </div>
                        <div class="form-group">
                            <label>Mật khẩu</label>
                            <input class="form-control" name="password" required type="password" placeholder="Mật khẩu" />
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success">Đăng nhập</button>
                        </div>
                        <div class="form-group">
                            @Html.Raw(ViewBag.StrError)
                            @ViewBag.StrError
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>