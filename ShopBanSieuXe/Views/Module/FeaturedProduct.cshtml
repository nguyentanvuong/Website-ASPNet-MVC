
@model IEnumerable<MyClass.Models.Product>
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sản Phẩm Đặc Sắc</h2>
                </div>
                <div class="featured__controls">
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="Content/img/product/@item.Img">
                            <ul class="featured__item__pic__hover">
                                <li><a href="/"><i class="fa fa-heart"></i></a></li>
                                <li><a href="@item.Slug"><i class="fa fa-retweet"></i></a></li>
                                <li><a href="/them-gio-hang?productId=@item.Id&quantity=1" id="addtocart"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@item.Slug">@item.Name</a></h6>
                            <h5>@item.Price.ToString("#,##0")đ</h5>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>
</section>

