@model IEnumerable<MyClass.Models.Category>
@{
    ViewBag.Title = "Thùng rác";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div style="width:250px" class="col-2">
    </div>
    <div class="content-wrapper col">
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6 text-danger text-uppercase">
                            <strong>THÙNG RÁC LOẠI SẢN PHẨM</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a class="btn btn-sm btn-info" href="@Url.Action("Index","Category")"><i class="fas fa-backward"></i>Trở lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("_XMessage")
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>
                                <input type="checkbox" name="checkAll" value="all" />
                            </th>
                            <th>Tên loại sản phẩm</th>
                            <th>Slug</th>
                            <th>Ngày tạo</th>
                            <th>Chức năng</th>
                            <th>ID</th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" name="checkAll" value="all" />
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Slug)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created_at)
                                </td>
                                <td>

                                    <a class="btn btn-group-sm btn-info" href="@Url.Action("Retrash","Category",new { id = item.Id })">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a class="btn btn-group-sm btn-danger" href="@Url.Action("Delete","Category",new { id = item.Id })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>

                            </tr>
                        }

                    </table>
                </div>
            </div>
        </section>
    </div>
</div>
