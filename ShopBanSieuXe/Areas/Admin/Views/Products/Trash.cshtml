@model IEnumerable<MyClass.Models.Product>
@{
    ViewBag.Title = "Thùng rác";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div style="width:250px" class="col-2">
    </div>
    <div class="content-wrapper col">
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6 text-danger text-uppercase">
                            <strong>THÙNG RÁC SẢN PHẨM</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a class="btn btn-sm btn-info" href="@Url.Action("Index","Products")"><i class="fas fa-backward"></i>Trở lại</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("_XMessage")
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th style="width:50px">Hình</th>
                            <th style="width:100px">Tên sản phẩm</th>
                            <th style="width:100px">Loại sản phẩm</th>
                            <th style="width:10px">Số lượng</th>
                            <th style="width:50px">Giá</th>
                            <th style="width:100px">Sản phẩm Hot</th>
                            <th style="width:100px">Sản phẩm mới</th>
                            <th style="width:100px">Sản phẩm đặc sắt</th>
                            <th style="width:100px">Chức năng</th>
                            <th style="width:10px">ID</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/Content/img/product/@item.Img" class="img-fluid" alt="img" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.CatId
                                </td>
                                <td>
                                    @item.Number
                                </td>
                                <td>
                                    @item.Price.ToString("#,##0")<span>đ</span>
                                </td>
                                <td>@item.TopHot</td>
                                <td>@item.TopNew</td>
                                <td>@item.Featured</td>
                                <td>

                                    <a class="btn btn-group-sm btn-info" href="@Url.Action("Retrash","Products",new { id = item.Id })">
                                        <i class="fas fa-undo-alt"></i>
                                    </a>
                                    <a class="btn btn-group-sm btn-danger" href="@Url.Action("Delete","Products",new { id = item.Id })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>
                                    @item.Id
                                </td>

                            </tr>
                        }

                    </table>
                </div>
            </div>
        </section>
    </div>
</div>
