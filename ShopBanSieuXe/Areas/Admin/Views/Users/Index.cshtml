@model IEnumerable<MyClass.Models.User>

@{
    ViewBag.Title = "Thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div style="width:250px" class="col-2">
    </div>
    <div class="content-wrapper col">
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6 text-danger text-uppercase">
                            <strong>DANH SÁCH THÀNH VIÊN</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a class="btn btn-sm btn-danger" href="@Url.Action("Trash","Users")"><i class="fas fa-trash-alt"></i>Thùng rác</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @Html.Partial("_XMessage")
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Họ và tên</th>
                                <th>Tên đăng nhập</th>
                                <th> Email </th>
                                <th> Số điện thoại </th>
                                <th>Ngày tạo</th>
                                <th>Chức năng</th>
                                <th>ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>@item.FullName</td>
                                <td>@item.UserName</td>
                                <td>@item.Email</td>
                                <td>@item.Phone</td>
                                <td>@item.Created_at</td>
                                <td>
                                    @if (item.Status == 1)
                                    {
                                        <a class="btn btn-group-sm btn-success" href="@Url.Action("Status","Users",new { id = item.Id })">
                                            <i class="fas fa-toggle-on"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-group-sm btn-danger" href="@Url.Action("Status","Users",new { id = item.Id })">
                                            <i class="fas fa-toggle-off"></i>
                                        </a>
                                    }
                                    <a class="btn btn-group-sm btn-info" href="@Url.Action("Edit","Users",new { id = item.Id })">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-group-sm btn-danger" href="@Url.Action("Deltrash","Users",new { id = item.Id })">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                                <td>@item.Id</td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

